#! /bin/bash
set -e
DEFAULT_TAR_URL="https://www.dropbox.com/s/u5obj9wbfuqbrzp/tablas-iniciales.tar.bz2?dl=0"
TAR_URL=${1:-$DEFAULT_TAR_URL}

: ${APP_PATH:="$(dirname $( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd ))"}
: ${TAR_PATH:="${APP_PATH}/tmp/tablas-iniciales.tar.bz2"}
: ${TAR_URL:="https://www.dropbox.com/s/u5obj9wbfuqbrzp/tablas-iniciales.tar.bz2?dl=0"}
: ${TABLES_PATH:="${APP_PATH}/tablas"}

wget -O ${TAR_PATH} ${TAR_URL} && tar xvf ${TAR_PATH} --no-same-owner -C ${TABLES_PATH}
rm -rf ${TAR_PATH}
